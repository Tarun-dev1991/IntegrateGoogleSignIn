@model List<IntegrateGoogleSignIn.Models.propackageuser>
@{
    ViewBag.Title = "GoogleScript";
}

<div class="container" style="margin-top: 15px;">
    <div class="panel panel-default">
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th width="10%">Package</th>
                            <th width="30%">Domain Name</th>
                            <th width="49%">Script</th>
                            <th width="10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <tr>
                                    <form method="post" action="@Url.Action("SetScript")">
                                        <input type="hidden" name="id" value="@user.Id" />
                                        <td>
                                            @if (user.hasSpecialSubscription)
                                            {
                                                <button class="btn btn-warning btn-xs">
                                                    Upgrade
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn btn-warning btn-xs">
                                                    Standard
                                                </button>
                                            }
                                        </td>
                                        <td>
                                            @user.domainname
                                        </td>
                                        <td>
                                            <textarea name="googlescript" class="form-control" style="min-width: 100%" required="required">@user.script</textarea>
                                        </td>
                                        <td>
                                            <button class="btn btn-primary">
                                                Submit
                                            </button>
                                        </td>
                                    </form>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

