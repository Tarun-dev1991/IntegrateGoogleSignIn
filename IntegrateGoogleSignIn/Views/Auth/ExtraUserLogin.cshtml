@{
    Layout = "~/Views/Shared/_LayoutOrange.cshtml";
}

<div class="row" style="font-family:Roboto !important;">
    <div class="col-md-6 col-md-offset-3">
        <form action="@Url.Action("ExtraUserLogin", "Auth")" method="post" style="background-color: white; padding: 10%; padding-top: 5%; border-radius: 3px; margin-top: 10%;">
            <h3 class="text-center" style="color: #f77408; font-family: Roboto ;font-size: 24pt;"><b>Partners Login</b></h3>
            <p class="text-center"><small>Login to access your dashboard</small></p><br>
            <div class="form-group">
                <input name="email" style="font-size: 12px; border-radius: 3px; background-color: #f9f9f9;" type="text" class="form-control" placeholder="Enter your email address" required="required">
            </div>
            <div class="form-group">
                <input name="password" style="font-size: 12px; border-radius: 3px; background-color: #f9f9f9;" type="password" class="form-control" placeholder="Enter your password" required="required">
            </div>
            <div class="form-group">
                <button style="font-size: 15px; border-color: #f77408; border-radius: 3px; background-color: #f77408;" type="submit" class="btn btn-primary btn-block">Login</button>
            </div>
            <div class="clearfix">
               
                <small><a href="@Url.Action("ExtraUserForgotPassword", "Auth")" class="pull-right" style="text-decoration: underline; color: #f77408; font-family: Roboto;">Forgot Password?</a></small>
            </div>
        </form>
    </div>
</div>
