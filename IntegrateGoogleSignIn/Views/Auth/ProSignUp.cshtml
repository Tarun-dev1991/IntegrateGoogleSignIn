            <div class="form-group">
                <input style="font-size: 12px;  background-color: #f9f9f9;" id="password_confirm" type="password" class="form-control" placeholder="Confirm password" name="password_confirm" oninput="check(this)"  required="required">
            </div>
            <div class="form-group">
                <input style="font-size: 12px; ; background-color: #f9f9f9;" type="text" class="form-control" placeholder="Enter your domain www.example.com" name="domain" required="required">
            </div>
            <div class="form-group">
                <button style="font-size: 15px;  background-color: #f77408;border-color: #f77408 " type="submit" class="btn btn-primary btn-block">Sign up</button>
            </div>
            <br />
            <div class="checkbox">
                <label style="font-size: smaller; display: initial"><input type="checkbox" required="required">Please tick to accept our <a style="text-decoration: underline">terms and conditions</a></label>
            </div>
            <div class="checkbox">
                <label style="font-size: smaller; display: initial"><input required="required" type="checkbox">I'm happy to get email reports and information about Digital Crumbs</label>
            </div>
        </form>
    </div>
    <div class="signhalfr charcoalbg aligncenter radius" >
        <div style="color:white;padding-top:6%;">
