<div class="row" style="font-family:Roboto;">
    <div class="signhalfl whitebg radius">
        <form id="formSignUp" action="@Url.Action("ProSignUp", "Auth")" method="post" >
            <span class="dashsub">Signup for free</span>
            
            <div class="form-group" >
                <input style="font-size: 12px;margin-top:8%;  background-color: #f9f9f9;" type="text" class="form-control" placeholder="Enter your name" name="name" required="required">
            </div>
            <div class="form-group">
                <input style="font-size: 12px; background-color: #f9f9f9;" type="email" class="form-control" placeholder="Enter your email address" name="email" required="required">
