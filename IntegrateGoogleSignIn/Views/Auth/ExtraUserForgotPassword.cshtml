@{
    Layout = "~/Views/Shared/_LayoutOrange.cshtml";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form action="@Url.Action("ExtraUserForgotPassword", "Auth")" method="post" style="background-color: white; padding: 10%; padding-top: 5%; border-radius: 20px; margin-top: 10%;">
            <h3 class="text-center" style="color: #f77408;font-family: Roboto Light;font-size: 24pt;"><b>Forgot Password</b></h3>
            <p class="text-center">
                <small>
                    Plese enter register email address
                </small><br>
                <div class="form-group">
                    <input name="email" style="font-size: 12px; border-radius: 20px; background-color: #f9f9f9;" type="text" class="form-control" placeholder="Enter your email address" required="required">
                </div>
                <div class="form-group">
                    <button style="font-size: 15px; border-radius: 20px; background-color: #f77408;border-color: #f77408" type="submit" class="btn btn-primary btn-block">SEND</button>
                </div>
                <div class="clearfix">
                    <small><a href="@Url.Action("ExtraUserLogin", "Auth")" style="text-decoration: underline;color: #f77408" " class="pull-right">Back to login</a></small>
                </div>
        </form>
    </div>
</div>
