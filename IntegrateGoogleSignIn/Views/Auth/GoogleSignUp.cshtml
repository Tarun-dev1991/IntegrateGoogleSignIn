@{
    ViewBag.Title = "Index";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    @*<meta content="width=640, initial-scale=0.47, maximum-scale=1.0, user-scalable=1" name="viewport">*@
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style>
        body {
            background: #007bff;
            background: linear-gradient(to left,#f77408, #ffbe00);
        }

        .navbar {
            box-shadow: 0px 1px #ccc;
            border-radius: 0px;
        }


        li::after {
            content:;
            background: #fff;
            width: 1px;
            height: 10px;
            display: inline-block;
            position: relative;
            content: '';
            top: 0;
            right: 0;
        }

        .navbar-nav > li > a {
            font-size: 13px;
            color: white;
            display: inline-block;
        }

            .navbar-nav > li > a:hover {
                background-color: transparent;
                color: white !important;
            }

        li:nth-child(4)::after {
            display: none;
        }

        li:nth-child(5)::after {
            display: none;
        }

        .navbar-brand {
            color: #FFF;
        }

        .navbar-toggle {
            background-color: white;
        }

        button.navbar-toggle > .icon-bar {
            background-color: black;
        }

        #myNavbar.in {
            background-color: black !important;
        }

        .nav > li > a:focus, a:hover {
            color: black !important;
        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a style="padding-left: 65px;" class="navbar-brand" href="@Url.Action("index", "Home")"><img src="~/Content/logo.png" /></a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("FAQs","Home")">FAQs</a></li>
                    <li><a href="@Url.Action("Pricing","Home")">PRICING</a></li>
                    <li><a href="@Url.Action("GoogleSignIn","Auth")">STANDARD LOGIN</a></li>
                    <li><a href="@Url.Action("ProLogin","Auth")">PRO LOGIN</a></li>
                    <li>
                        <button onclick="window.location.href='@Url.Action("Pricing","Home")';" type="button" class="btn btn-default navbar-btn" style="margin-left: 10px;background-color: #fefdff; color: #fe0606;border-radius: 20px;"><b>TRY US FOR FREE</b></button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <form action="@Url.Action("SignUpUsingGoogle","Auth")" method="post" style="background-color: white;padding: 10%;padding-top: 5%; border-radius: 20px; margin-top: 10%;">
                    <h3 class="text-center" style="color: #f77408"><b>Sign Up</b></h3>
                    <p class="text-center"><small>Try our 30 day free trail(cancel anytime)</small></p><br />
                    <div class="form-group">
                        <button style="font-size: 15px;border-radius: 20px;background-color: #f77408;border-color: #f77408" type="submit" class="btn btn-primary btn-block">Register with Google</button>
                    </div>
                    <div class="checkbox" style="padding-left: 5%;">
                        <label style="font-size: smaller;display:initial"><input type="checkbox" required="">Please tick to accept our <a style="text-decoration: underline">terms and conditions</a></label>
                    </div>
                    <div class="checkbox" style="padding-left: 5%;">
                        <label style="font-size: smaller;display:initial"><input type="checkbox" required="">I'm happy to get email reports and information about Digital Crumbs</label>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
