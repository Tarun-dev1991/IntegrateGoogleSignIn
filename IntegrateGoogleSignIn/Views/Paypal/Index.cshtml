@model List<IntegrateGoogleSignIn.Models.PaypalSubscriptionVm>
@{
    ViewBag.Title = "Subscription Plans";
}
<style>
    #cul > li.active {
        width: 50%;
    }

    #cul > li {
        font-size: 16px;
        text-align: center;
        width: 50%;
    }

        #cul > li > a {
            background-color: gray;
            color: white;
        }

        #cul > li.active > a {
            background-color: #f0bd14;
            color: white;
        }

    #cul {
        border: none;
    }
</style>
<div class="container">
    @*<ul id="cul" class="nav nav-tabs" style="margin-top: 10px;">
