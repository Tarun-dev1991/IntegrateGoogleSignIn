@{
    ViewBag.Title = "PayPal Subscription";
    Layout = "~/Views/Shared/_LayoutProPackage.cshtml";
    TempData["SwalErrorMessage"] = string.Empty;
    TempData["Message"] = string.Empty;
    TempData["SwalSuccessMessage"] = string.Empty;
    ViewBag.Color = "#00a2f3";
}

<style>
    .sweet-alert > h2{
         font-size: 25px;
         color: #ffa500;
         font-weight: bold;
    }

    .sweet-alert > p.lead {
        color: #000;
        font-size: 12px;
    }

    .ctext {
        text-align: center;
        font-size: 14px;
        color: #ffa500;
    }
</style>
<link href="~/Content/sweetalert.min.css" rel="stylesheet" />
<script src="~/Content/sweetalert.min.js"></script>
<script>
    $(document).ready(function () {
        swal({
            title: "Thank you for signing up,<br /> Now let's start your 14 day free trial",
            text: "<br><img src='../../Content/paypal-logo.png' style='width:120px'><br><br>Before we can begin we require confirmation of your Paypal account, but the 999 INR a month will NOT be taken unless you continue beyond your 14 day free trial. You can cancel on your dashboard at anytime. \n <br><span class='ctext'>We adhere to PayPal strict rules and requirements.</span>",
            type: "warning",
            showCancelButton: true,
            confirmButtonClass: "btn-danger",
            confirmButtonText: "Yes, accepted!",
            cancelButtonText: "No, cancel!",
            closeOnConfirm: true,
            closeOnCancel: true,
            html: true
        },
            function (isConfirm) {
                if (isConfirm) {
                    window.location.href = "/Propackage/Subscription";
                } else {
                    window.location.href = "/Auth/ProLogin/2";
                }
            });
    });
</script>